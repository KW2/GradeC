<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/save_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="기록 저장"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/save_nameText"
        android:layout_below="@id/save_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기록명: "
        android:textSize="30dp"
        />
    <EditText
        android:id="@+id/save_nameEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/save_nameText"
        android:layout_below="@id/save_title"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@id/save_nameText"
        />
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/save_tipText"
        android:layout_below="@id/save_nameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="기록된 내용은 수정이 되지 않습니다. \r\n정확히 확인후 저장하세요."
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_below="@id/save_tipText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/save_cancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="취소"/>
        <Button
            android:id="@+id/save_saveBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="저장"/>
    </LinearLayout>

</RelativeLayout>